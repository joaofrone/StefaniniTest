@model IEnumerable<PedidosWeb.Models.objPedido>
@{
    ViewData["Title"] = "Pedidos - Lista";
}

<div class="text-left">
    <h3>Pedido(s)</h3>
    @Html.ActionLink("Novo", "Novo", "Pedido", new { }, new { @class = "btn btn-sm btn-light" })
    <br />
    <table class="table">
        <thread>
            <tr>
                <th>ID</th>
                <th style="text-align:left;">Nome do Cliente</th>
                <th style="text-align:left;">Email do Cliente</th>
                <th style="text-align:left;">Total</th>
                <th></th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            @foreach (objPedido oPedido in Model)
            {
                <tr>
                    <td style="text-align:center;">@Html.DisplayFor(modelItem => oPedido.id)</td>
                    <td style="text-align:left;">@Html.DisplayFor(modelItem => oPedido.nomeCliente)</td>
                    <td style="text-align:left;">@Html.DisplayFor(modelItem => oPedido.emailCliente)</td>
                    <td style="text-align:right;">@Html.DisplayFor(modelItem => oPedido.valorTotal)</td>
                    <td>
                        @Html.ActionLink("Excluir", "Deletar", "Home", new {id = oPedido.id }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Index", "Pedido", new {id = oPedido.id }, new { @class = "btn btn-sm btn-success" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
